<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_card_service_deposit_buy"
    android:orientation="vertical">

    <include layout="@layout/toolbar" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:src="@drawable/ic_logo_tchno" />

    <com.technotapp.servicestation.customView.CustomTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:text="کارت خوان تکنوتَپ"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:fontName="@string/irsansMedium" />

    <com.technotapp.servicestation.customView.TextViewEx
        android:id="@+id/activity_about_tv_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="15dp"
        android:lineSpacingExtra="5dp"
        android:textColor="@color/black"
        android:textSize="14sp" />

    <com.technotapp.servicestation.customView.CustomTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:drawablePadding="10dp"
        android:drawableRight="@drawable/ic_web_black"
        android:gravity="right|center_vertical"
        android:paddingRight="70dp"
        android:text="www.technotapp.com"
        android:textColor="@color/black"
        android:textSize="15sp"
        app:fontName="@string/irsansMedium" />

    <com.technotapp.servicestation.customView.CustomTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:drawablePadding="10dp"
        android:drawableRight="@drawable/ic_email_black"
        android:gravity="right|center_vertical"
        android:paddingRight="70dp"
        android:text="info@technotapp.com"
        android:textColor="@color/black"
        android:textSize="15sp"
        app:fontName="@string/irsansMedium" />

    <com.technotapp.servicestation.customView.CustomTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:drawablePadding="10dp"
        android:drawableRight="@drawable/ic_tell_black"
        android:gravity="right|center_vertical"
        android:paddingRight="70dp"
        android:text="021 - 22578583"
        android:textColor="@color/black"
        android:textSize="15sp"
        app:fontName="@string/irsansMedium" />


    <com.technotapp.servicestation.customView.CustomTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:gravity="center"
        android:text="تمامی حقوق  نرم افزار متعلق به شرکت تکنوتَپ می باشد"
        android:textColor="@color/black"
        android:textSize="13sp"
        app:fontName="@string/irsansMedium" />

</LinearLayout>