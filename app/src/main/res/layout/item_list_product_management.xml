<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layoutDirection="rtl"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:clickable="false"
        android:layoutDirection="rtl"
        android:orientation="horizontal"
        android:padding="4dp">

        <com.technotapp.servicestation.customView.CustomTextView
            android:id="@+id/item_list_product_management_txtId"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="1"
            android:textColor="@color/black"
            android:textSize="12sp"
            app:fontName="@string/irsansNumber" />

        <com.technotapp.servicestation.customView.CustomTextView
            android:id="@+id/item_list_product_management_txtName"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="اصلاح صورت"
            android:textColor="@color/black"
            android:textSize="12sp"
            app:fontName="@string/irsansNumber" />

        <com.technotapp.servicestation.customView.CustomTextView
            android:id="@+id/item_list_product_management_txtUnit"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="2"
            android:textColor="@color/black"
            android:textSize="12sp"
            app:fontName="@string/irsansNumber" />

        <com.technotapp.servicestation.customView.CustomTextView
            android:id="@+id/item_list_product_management_txtPrice"
            android:layout_width="88dp"
            android:layout_height="match_parent"
            android:clickable="false"
            android:gravity="center"
            android:text="25,000"
            android:textColor="@color/black"
            android:textSize="12sp"
            app:fontName="@string/irsansNumber" />

        <Button
            android:id="@+id/item_list_product_management_btnEdit"
            android:layout_width="32dp"
            android:layout_height="24dp"
            android:layout_gravity="center"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/ic_edit"
            android:gravity="center" />
    </LinearLayout>


</LinearLayout>