<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:layoutDirection="ltr"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/fragment_dialog_alert_layout"
        android:layout_width="256dp"
        android:layout_height="256dp"
        android:gravity="center"
        android:layoutDirection="rtl"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/fragment_dialog_alert_image"
            android:layout_width="104dp"
            android:layout_height="104dp"
            android:layout_marginTop="8dp" />

        <com.technotapp.servicestation.customView.CustomTextView
            android:id="@+id/fragment_dialog_alert_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:textColor="@color/white"
            android:textSize="14sp"
            app:fontName="@string/irsansMedium" />

        <com.technotapp.servicestation.customView.CustomButton
            android:id="@+id/fragment_dialog_alert_button"
            android:layout_width="168dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="12dp"
            android:text="بازگشت"
            app:fontName="@string/irsansMedium" />

    </LinearLayout>

</LinearLayout>