<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_all_page"
    android:gravity="center"
    android:orientation="vertical"
    tools:context="com.technotapp.servicestation.activity.CardServiceActivity">

    <Button
        android:id="@+id/activity_card_service_btn_moneytransfer"
        android:layout_width="256dp"
        android:layout_height="64dp"
        android:layout_marginBottom="38dp"
        android:background="@drawable/bg_button"
        android:text="@string/activity_card_service_moneytransfer"
        android:textColor="#ffffff"
        android:textSize="18sp" />

    <Button
        android:id="@+id/activity_card_service_btn_balance"
        android:layout_width="256dp"
        android:layout_height="64dp"
        android:layout_marginBottom="38dp"
        android:background="@drawable/bg_button"
        android:text="@string/activity_card_service_balance"
        android:textColor="#ffffff"
        android:textSize="18sp" />

    <Button
        android:id="@+id/activity_card_service_btn_buy"
        android:layout_width="256dp"
        android:layout_height="64dp"
        android:background="@drawable/bg_button"
        android:text="@string/activity_card_service_buy"
        android:textColor="#ffffff"
        android:textSize="18sp" />
</LinearLayout>
