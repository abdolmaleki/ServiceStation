<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_card_service_deposit_buy"
    android:orientation="vertical">

    <include layout="@layout/toolbar" />

    <lib.kingja.switchbutton.SwitchMultiButton
        android:id="@+id/activity_setting_login_switch_roles"
        android:layout_width="230dp"
        android:layout_height="45sp"
        android:layout_gravity="center"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="130dp"
        android:padding="8dp"
        app:selectedColor="#7B1FA2"
        app:selectedTab="0"
        app:strokeRadius="10dp"
        app:strokeWidth="2dp"
        app:switchTabs="@array/user_roles"
        app:textSize="14sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

            <com.technotapp.servicestation.customView.CustomEditText
                android:id="@+id/activity_setting_login_et_username"
                android:layout_width="230dp"
                android:layout_height="45dp"
                android:layout_gravity="center"
                android:background="@drawable/bg_default_edittext_blackstroke"
                android:drawableRight="@drawable/ic_user_name"
                android:gravity="center"
                android:hint="نام کاربری"
                android:inputType="textNoSuggestions"
                android:paddingRight="5dp"
                app:fontName="@string/irsansMedium" />

            <com.technotapp.servicestation.customView.CustomEditText
                android:id="@+id/activity_setting_login_et_password"
                android:layout_width="230dp"
                android:layout_height="45dp"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:background="@drawable/bg_default_edittext_blackstroke"
                android:drawableRight="@drawable/ic_password"
                android:gravity="center"
                android:hint="رمز عبور"
                android:inputType="textPassword"
                android:paddingRight="5dp"
                app:fontName="@string/irsansMedium" />

        <com.technotapp.servicestation.customView.CustomButton
            android:id="@+id/activity_setting_login_btn_confirm"
            android:layout_width="230dp"
            android:layout_height="45dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:background="@drawable/bg_btn_purple_raduce"
            android:text="ورود"
            android:textColor="@color/white"
            android:textSize="18sp"
            app:fontName="b-titr" />
    </LinearLayout>

</LinearLayout>