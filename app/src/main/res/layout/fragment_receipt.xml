<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layoutDirection="rtl"
    android:paddingTop="@dimen/fragments_padding_top"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="16dp"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="192dp"
            android:layout_margin="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:orientation="vertical">

                <com.technotapp.servicestation.customView.CustomTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#673AB7"
                    android:gravity="center"
                    android:text="شناسایی با بارکد خوان"
                    android:textColor="#ffffff"
                    android:textSize="16sp"
                    app:fontName="irsans_bold" />

                <ImageButton
                    android:id="@+id/fragment_receipt_btnQrReader"
                    android:layout_width="128dp"
                    android:layout_height="128dp"
                    android:layout_gravity="center"
                    android:layout_margin="9dp"
                    android:background="@drawable/ic_qr_reader" />
            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="192dp"
            android:layout_margin="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="16dp"
                android:orientation="vertical">

                <com.technotapp.servicestation.customView.CustomTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#673AB7"
                    android:gravity="center"
                    android:text="شناسایی دستی"
                    android:textColor="#ffffff"
                    android:textSize="16sp"
                    app:fontName="irsans_bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="144dp"
                    android:gravity="center"
                    android:orientation="vertical">


                    <com.technotapp.servicestation.customView.CustomEditText
                        android:id="@+id/fragment_receipt_edtBillingId"
                        android:layout_width="192dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="@drawable/ed_fragment_receipt"
                        android:gravity="center"
                        android:hint="شناسه قبض"
                        android:imeOptions="actionDone"
                        android:padding="4dp"
                        android:textSize="16sp"
                        app:fontName="zar" />

                    <com.technotapp.servicestation.customView.CustomEditText
                        android:id="@+id/fragment_receipt_edtPaymentCode"
                        android:layout_width="192dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="16dp"
                        android:background="@drawable/ed_fragment_receipt"
                        android:gravity="center"
                        android:hint="شناسه پرداخت"
                        android:imeOptions="actionDone"
                        android:padding="4dp"
                        android:textSize="16sp"
                        app:fontName="zar" />


                </LinearLayout>

            </LinearLayout>
        </android.support.v7.widget.CardView>

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <com.technotapp.servicestation.customView.CustomButton
            android:id="@+id/fragment_receipt_btnConfirm"
            android:layout_width="192dp"
            android:layout_height="48dp"
            android:layout_gravity="center"
            android:layout_marginBottom="16dp"
            android:background="#673AB7"
            android:gravity="center"
            android:text="تایید"
            android:textColor="@color/white"
            app:fontName="irsans_bold" />

    </LinearLayout>

</LinearLayout>