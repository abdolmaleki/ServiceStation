<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layoutDirection="rtl"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="16dp"
        android:background="@drawable/background"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            android:layout_margin="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:orientation="vertical">

                <com.technotapp.servicestation.customView.CustomTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:background="@drawable/bg_fragment_receipt_end"
                    android:text="شناسایی با بارکد خوان"
                    android:textColor="#ffffff"
                    app:fontName="irsans_bold"
                    android:textSize="16sp" />

                <ImageButton
                    android:id="@+id/fragment_receipt_btnQrReader"
                    android:layout_width="92dp"
                    android:layout_height="92dp"
                    android:layout_gravity="center"
                    android:layout_margin="16dp"
                    android:background="@drawable/ic_qr_reader" />
            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:orientation="vertical">

                <com.technotapp.servicestation.customView.CustomTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:background="@drawable/bg_fragment_receipt_end"
                    android:text="شناسایی دستی"
                    android:textColor="#ffffff"
                    app:fontName="irsans_bold"
                    android:textSize="16sp" />

                <android.support.design.widget.TextInputLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="16dp"
                    android:gravity="center">

                    <com.technotapp.servicestation.customView.CustomEditText
                        android:id="@+id/fragment_receipt_edtPaymentCode"
                        android:layout_width="192dp"
                        android:layout_height="match_parent"
                        android:hint="شناسه پرداخت"
                        android:textSize="16sp" />
                </android.support.design.widget.TextInputLayout>


                <android.support.design.widget.TextInputLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:gravity="center">

                    <com.technotapp.servicestation.customView.CustomEditText
                        android:id="@+id/fragment_receipt_edtBillingId"
                        android:layout_width="192dp"
                        android:layout_height="match_parent"
                        android:hint="شناسه قبض"

                        android:textSize="16sp" />

                </android.support.design.widget.TextInputLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <com.technotapp.servicestation.customView.CustomButton
            android:layout_width="192dp"
            android:layout_height="48dp"
            android:layout_gravity="center"
            android:layout_marginBottom="16dp"
            android:background="@color/fragment_transaction_response_dialog_success_textColor"
            android:gravity="center"
            android:text="پرداخت"
            android:textColor="@color/white" />

    </LinearLayout>

</LinearLayout>