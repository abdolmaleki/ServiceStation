<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layoutDirection="ltr"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="256dp"
        android:layout_height="200dp"
        android:background="@drawable/bg_lyr_dialog_swipe_card"
        android:gravity="center"
        android:layoutDirection="rtl"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/fragment_dialog_loading_imgLoading"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:src="@drawable/ic_pos" />

        <com.technotapp.servicestation.customView.CustomTextView
            android:id="@+id/fragment_dialog_loading_textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="24dp"
            android:gravity="center"
            android:textColor="#283542"
            android:textSize="14sp"
            app:fontName="@string/irsansMedium" />

    </LinearLayout>
</LinearLayout>