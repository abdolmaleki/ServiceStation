<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="144dp"
        android:layout_height="128dp"
        android:layout_gravity="center"
        android:background="@drawable/bg_custom_fragment_item"
        android:orientation="vertical">

        <com.technotapp.servicestation.customView.CustomTextView
            android:id="@+id/item_grid_custom_service_txtTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:text="اصلاح صورت"
            android:textColor="@color/white"
            android:textSize="12sp"
            app:fontName="@string/irsansMedium" />

        <com.technotapp.servicestation.customView.CustomTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:gravity="center"
            android:text="قیمت:"
            android:textColor="@color/white"
            android:textSize="12sp"
            app:fontName="@string/irsansMedium" />

        <com.technotapp.servicestation.customView.CustomTextView
            android:id="@+id/item_grid_custom_service_txt_price"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="120,000ریال"
            android:textColor="@color/white"
            android:textSize="12sp"
            app:fontName="@string/irsansNumber" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/item_grid_custom_service_btn_minus"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:background="@drawable/bg_custom_fragment_item_bottom_minus_button"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_minus"
                android:textColor="@color/white" />

            <com.technotapp.servicestation.customView.CustomTextView
                android:id="@+id/item_grid_custom_service_txtCount"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/bg_custom_fragment_item_bottom_textview"
                android:gravity="center"
                android:text="3 عدد"
                android:textColor="@color/white"
                android:textSize="12sp"
                app:fontName="@string/irsansNumber" />

            <ImageButton
                android:id="@+id/item_grid_custom_service_btn_plus"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:background="@drawable/bg_custom_fragment_item_bottom_plus_button"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_plus"
                android:textColor="@color/white" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>