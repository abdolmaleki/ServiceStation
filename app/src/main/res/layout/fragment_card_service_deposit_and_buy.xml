<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.technotapp.servicestation.fragment.CardServiceDepositAndBuyFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="24dp"
        android:orientation="vertical">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layoutDirection="rtl"
            android:layout_marginEnd="24dp"
            android:layout_height="wrap_content">
            <com.technotapp.servicestation.customView.CustomTextView
                android:layout_width="wrap_content"
                android:text="@string/fragment_card_service_deposit_buy_amount"
                android:textSize="18sp"
                android:textColor="@color/white"
                android:gravity="center"
                android:layout_height="match_parent" />

            <com.technotapp.servicestation.customView.CustomTextView
                android:id="@+id/fragment_card_service_buy_txtAmount"
                android:layout_width="match_parent"
                android:layout_marginStart="16dp"
                android:layout_height="48dp"
                android:background="@drawable/cs_textview_get_amount"
                android:gravity="center"
                android:inputType="numberDecimal"
                android:textSize="32sp"
                app:fontName="zar"
                android:lines="1"
                android:textColor="@color/white"
                android:maxLength="9" />

        </LinearLayout>


        <LinearLayout
            android:padding="4dp"
            android:background="@drawable/bg_lyr_keypad"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginTop="32dp"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:layout_marginBottom="16dp"
            android:gravity="center"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <com.technotapp.servicestation.customView.CustomButton
                    android:id="@+id/fragment_keypad_one"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="1"
                    android:textColor="@color/fragment_keypad_button_text"
                    android:textSize="@dimen/fragment_keypad_buttontext"
                    app:fontName="@string/fragment_keypad_font_name" />

                <com.technotapp.servicestation.customView.CustomButton
                    android:id="@+id/fragment_keypad_two"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="2"
                    android:textColor="@color/fragment_keypad_button_text"
                    android:textSize="@dimen/fragment_keypad_buttontext"
                    app:fontName="@string/fragment_keypad_font_name" />

                <com.technotapp.servicestation.customView.CustomButton
                    android:id="@+id/fragment_keypad_three"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="3"
                    android:textColor="@color/fragment_keypad_button_text"
                    android:textSize="@dimen/fragment_keypad_buttontext"
                    app:fontName="@string/fragment_keypad_font_name" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <com.technotapp.servicestation.customView.CustomButton
                    android:id="@+id/fragment_keypad_four"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="4"
                    android:textColor="@color/fragment_keypad_button_text"
                    android:textSize="@dimen/fragment_keypad_buttontext"
                    app:fontName="@string/fragment_keypad_font_name"/>

                <com.technotapp.servicestation.customView.CustomButton
                    android:id="@+id/fragment_keypad_five"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="5"
                    android:textColor="@color/fragment_keypad_button_text"
                    android:textSize="@dimen/fragment_keypad_buttontext"
                    app:fontName="@string/fragment_keypad_font_name" />

                <com.technotapp.servicestation.customView.CustomButton
                    android:id="@+id/fragment_keypad_six"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="6"
                    android:textColor="@color/fragment_keypad_button_text"
                    android:textSize="@dimen/fragment_keypad_buttontext"
                    app:fontName="@string/fragment_keypad_font_name" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <com.technotapp.servicestation.customView.CustomButton
                    android:id="@+id/fragment_keypad_seven"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="7"
                    android:textColor="@color/fragment_keypad_button_text"
                    android:textSize="@dimen/fragment_keypad_buttontext"
                    app:fontName="@string/fragment_keypad_font_name"/>

                <com.technotapp.servicestation.customView.CustomButton
                    android:id="@+id/fragment_keypad_eight"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="8"
                    android:textColor="@color/fragment_keypad_button_text"
                    android:textSize="@dimen/fragment_keypad_buttontext"
                    app:fontName="@string/fragment_keypad_font_name" />

                <com.technotapp.servicestation.customView.CustomButton
                    android:id="@+id/fragment_keypad_nine"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="9"
                    android:textColor="@color/fragment_keypad_button_text"
                    android:textSize="@dimen/fragment_keypad_buttontext"
                    app:fontName="@string/fragment_keypad_font_name" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <com.technotapp.servicestation.customView.CustomButton
                    android:id="@+id/fragment_keypad_triple_zero"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="000"
                    android:textColor="@color/fragment_keypad_button_text"
                    android:textSize="@dimen/fragment_keypad_buttontext"
                    app:fontName="@string/fragment_keypad_font_name"/>

                <com.technotapp.servicestation.customView.CustomButton
                    android:id="@+id/fragment_keypad_zero"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="0"
                    android:textColor="@color/fragment_keypad_button_text"
                    android:textSize="@dimen/fragment_keypad_buttontext"
                    app:fontName="@string/fragment_keypad_font_name" />

                <com.technotapp.servicestation.customView.CustomButton
                    android:id="@+id/fragment_keypad_backspace"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="حذف کردن"
                    android:textColor="@color/fragment_keypad_button_text"
                    android:textSize="12sp"
                    app:fontName="irsans-Medium" />


            </LinearLayout>
        </LinearLayout>


        <Button
            android:id="@+id/fragment_card_service_buy_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:background="#00695C"
            android:text="@string/fragment_card_service_deposit_buy_confirm"
            android:textColor="#fff" />
    </LinearLayout>

</LinearLayout>
