<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/item_grid_card_service_lyr"
    android:layout_width="164dp"
    android:layout_height="134dp"
    android:background="@drawable/bg_card_service_grid_item"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="14dp"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="14dp"
        android:gravity="center"
        android:orientation="vertical">
    <ImageView
        android:id="@+id/item_grid_card_service_iv_icon"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:padding="6dp" />

    <com.technotapp.servicestation.customView.CustomTextView
        android:id="@+id/item_grid_card_service_iv_title"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="کارت به کارت"
        android:textColor="#fff"
        android:textSize="12sp"
        app:fontName="@string/irsansMedium" />
    </LinearLayout>

</LinearLayout>

