<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="@drawable/bg_all_page"
    android:orientation="vertical"
    tools:context="com.technotapp.servicestation.activity.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:layout_margin="16dp"
        android:gravity="center_horizontal|start"
        android:layoutDirection="rtl">

        <ImageButton
            android:id="@+id/activity_main_btnSetting"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:background="@drawable/ic_ansar_logo" />

        <com.technotapp.servicestation.customView.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="4dp"
            android:text="@string/activity_splash_ansarFullSlogan"
            android:textColor="#ffffff"
            android:textSize="14sp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:gravity="center">

        <GridView
            android:listSelector="@android:color/transparent"
            android:id="@+id/activity_main_grdList"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:gravity="center"
            android:horizontalSpacing="8dp"
            android:numColumns="2"
            android:verticalSpacing="20dp"
            tools:listitem="@layout/item_grid_main_menu" />
    </LinearLayout>

</LinearLayout>
