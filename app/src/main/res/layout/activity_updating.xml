<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_main_page"
    android:gravity="center"
    android:layoutDirection="ltr"
    android:orientation="vertical">

    <com.timqi.sectorprogressview.ColorfulRingProgressView
        android:id="@+id/activity_updating_progress"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:layout_marginBottom="10dp"
        app:bgColor="#e1e1e1"
        app:fgColorEnd="#ff4800"
        app:fgColorStart="#ffe400"
        app:percent="0"
        app:startAngle="0"
        app:strokeWidth="15dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="200dp"
        android:text="در حال بروزرسانی منوی دستگاه" />


    <com.technotapp.servicestation.customView.CustomButton
        android:id="@+id/activity_updating_btn_retry"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:background="@drawable/cs_btn_charge_fragment_type_charge_selected"
        android:text="تلاش مجدد"
        android:textColor="@color/white"
        android:visibility="invisible"
        android:textStyle="bold"
        app:fontName="irsans" />

    <com.technotapp.servicestation.customView.CustomButton
        android:id="@+id/activity_updating_btn_exit"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/cs_btn_charge_fragment_type_charge_selected"
        android:text="بی خیال"
        android:visibility="invisible"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:fontName="irsans" />


</LinearLayout>