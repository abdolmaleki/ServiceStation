<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="16dp"
    android:orientation="vertical">
<LinearLayout
    android:padding="4dp"
    android:background="@drawable/bg_lyr_keypad"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <com.technotapp.servicestation.customView.CustomButton
            android:id="@+id/fragment_keypad_one"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="1"
            android:textColor="@color/fragment_keypad_button_text"
            android:textSize="@dimen/fragment_keypad_buttontext"
            app:fontName="@string/fragment_keypad_font_name" />

        <com.technotapp.servicestation.customView.CustomButton
            android:id="@+id/fragment_keypad_two"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="2"
            android:textColor="@color/fragment_keypad_button_text"
            android:textSize="@dimen/fragment_keypad_buttontext"
            app:fontName="@string/fragment_keypad_font_name" />

        <com.technotapp.servicestation.customView.CustomButton
            android:id="@+id/fragment_keypad_three"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="3"
            android:textColor="@color/fragment_keypad_button_text"
            android:textSize="@dimen/fragment_keypad_buttontext"
            app:fontName="@string/fragment_keypad_font_name" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <com.technotapp.servicestation.customView.CustomButton
            android:id="@+id/fragment_keypad_four"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="4"
            android:textColor="@color/fragment_keypad_button_text"
            android:textSize="@dimen/fragment_keypad_buttontext"
            app:fontName="@string/fragment_keypad_font_name"/>

        <com.technotapp.servicestation.customView.CustomButton
            android:id="@+id/fragment_keypad_five"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="5"
            android:textColor="@color/fragment_keypad_button_text"
            android:textSize="@dimen/fragment_keypad_buttontext"
            app:fontName="@string/fragment_keypad_font_name" />

        <com.technotapp.servicestation.customView.CustomButton
            android:id="@+id/fragment_keypad_six"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="6"
            android:textColor="@color/fragment_keypad_button_text"
            android:textSize="@dimen/fragment_keypad_buttontext"
            app:fontName="@string/fragment_keypad_font_name" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <com.technotapp.servicestation.customView.CustomButton
            android:id="@+id/fragment_keypad_seven"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="7"
            android:textColor="@color/fragment_keypad_button_text"
            android:textSize="@dimen/fragment_keypad_buttontext"
            app:fontName="@string/fragment_keypad_font_name"/>

        <com.technotapp.servicestation.customView.CustomButton
            android:id="@+id/fragment_keypad_eight"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="8"
            android:textColor="@color/fragment_keypad_button_text"
            android:textSize="@dimen/fragment_keypad_buttontext"
            app:fontName="@string/fragment_keypad_font_name" />

        <com.technotapp.servicestation.customView.CustomButton
            android:id="@+id/fragment_keypad_nine"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="9"
            android:textColor="@color/fragment_keypad_button_text"
            android:textSize="@dimen/fragment_keypad_buttontext"
            app:fontName="@string/fragment_keypad_font_name" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <com.technotapp.servicestation.customView.CustomButton
            android:id="@+id/fragment_keypad_triple_zero"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="000"
            android:textColor="@color/fragment_keypad_button_text"
            android:textSize="@dimen/fragment_keypad_buttontext"
            app:fontName="@string/fragment_keypad_font_name"/>

        <com.technotapp.servicestation.customView.CustomButton
            android:id="@+id/fragment_keypad_zero"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="0"
            android:textColor="@color/fragment_keypad_button_text"
            android:textSize="@dimen/fragment_keypad_buttontext"
            app:fontName="@string/fragment_keypad_font_name" />

        <com.technotapp.servicestation.customView.CustomButton
            android:id="@+id/fragment_keypad_backspace"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="حذف کردن"
            android:textColor="@color/fragment_keypad_button_text"
            android:textSize="12sp"
            app:fontName="irsans-Medium" />


    </LinearLayout>
</LinearLayout>
</LinearLayout>