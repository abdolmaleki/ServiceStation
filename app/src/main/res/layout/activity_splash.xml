<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#009688"
    android:orientation="vertical"
    tools:context="com.technotapp.servicestation.activity.SplashActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#009688"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/splash_logoLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="@dimen/ansarLogoW_H"
                android:layout_height="@dimen/ansarLogoW_H"
                android:background="@mipmap/ic_ansarlogo"
                android:elevation="96dp" />

            <ImageView
                android:layout_width="108dp"
                android:layout_height="32dp"
                android:background="@mipmap/ic_anarlogotext" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="24dp" />

        <LinearLayout
            android:id="@+id/splash_textLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <com.technotapp.servicestation.customView.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/activity_splash_ansar_slogan"
                android:textColor="#F5F5F5"
                android:textSize="24dp"
                app:fontName="irsans-Medium" />


        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="16dp" />
    <me.zhanghai.android.materialprogressbar.MaterialProgressBar
        android:id="@+id/splash_prg"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="256dp"
        android:layout_height="4dp"
        android:layout_gravity="center"
        android:indeterminate="false"
        android:max="100"
        android:minHeight="4dp"
        android:minWidth="256dp"
        android:visibility="invisible"
        app:mpb_progressStyle="horizontal"
        app:mpb_progressTint="#880E4F" />

    <View
        android:layout_width="match_parent"
        android:layout_height="32dp" />

</LinearLayout>
