<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_all_page"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context="com.technotapp.servicestation.activity.SigninActivity">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="168dp"
        android:layout_height="168dp"
        android:layout_marginTop="8dp"
        app:srcCompat="@drawable/ic_ansar_logo" />

    <LinearLayout
        android:layout_marginEnd="32dp"
        android:layout_marginStart="32dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <com.technotapp.servicestation.customView.CustomTextView
            android:id="@+id/activity_signin_txtMerchantName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginTop="48dp"
            android:gravity="center"
            android:text="فروشگاه اصغر فرهادی"
            android:textColor="#ffffff"
            android:textSize="16sp"
            app:fontName="irsans" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"

            android:layout_marginLeft="32dp"
            android:layout_marginRight="32dp"
            android:layout_marginTop="8dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <com.technotapp.servicestation.customView.CustomTextView
                android:id="@+id/activity_signin_txtMerchantCode"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="2141212121"
                android:textAlignment="textStart"
                android:textColor="#ffffff"
                android:textSize="20sp"
                app:fontName="zar" />

            <com.technotapp.servicestation.customView.CustomTextView
                android:layout_width="92dp"
                android:layout_height="wrap_content"
                android:layout_gravity="end|center_vertical"
                android:gravity="center"
                android:text="@string/activity_signin_merchantCode"
                android:textColor="#ffffff"
                android:textSize="16sp"
                app:fontName="irsans" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#00607D8B"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="28dp">


            <EditText
                android:id="@+id/activity_signin_edtPassword"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/cs_edittext"
                android:hint="@string/activity_signin_password"
                android:inputType="numberPassword"
                android:maxLength="8"
                android:textAlignment="center"
                android:textColorHint="#55000000" />


            <com.technotapp.servicestation.customView.CustomButton
                android:id="@+id/activity_signin_btnSignin"
                android:layout_width="168dp"
                android:layout_height="48dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/cs_signin_button"
                android:gravity="center"
                android:maxLength="16"
                android:text="@string/activity_signin_signin"
                android:textColor="#ffffff"
                android:textSize="18sp"
                app:fontName="irsans" />

        </LinearLayout>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="10dp"
        android:layout_weight="1"
        android:gravity="center_horizontal|bottom"
        android:selectAllOnFocus="false"
        android:text="@string/activity_signin_copyWriteText"
        android:textColor="#ffffff"
        android:textSize="14sp" />

</LinearLayout>
