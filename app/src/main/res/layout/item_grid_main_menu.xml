<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="92dp"
        android:layout_height="128dp"
        android:background="@drawable/bg_main_grid_item"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/item_grid_main_menu_iv_icon"
            android:layout_width="58dp"
            android:layout_height="58dp" />

        <com.technotapp.servicestation.customView.CustomTextView
            android:id="@+id/item_grid_main_menu_iv_title"
            android:layout_width="match_parent"
            android:layout_height="18dp"
            android:gravity="center"
            android:text="خدمات شارژ"
            android:textColor="#ffffff"
            android:textSize="10sp" />

        <ListView
            android:id="@+id/item_grid_main_menu_list_items"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="3dp"
            android:layout_weight="1"
            android:background="@drawable/bg_main_grid_list_item">

        </ListView>
    </LinearLayout>

</LinearLayout>