<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layoutDirection="rtl"
    android:paddingTop="@dimen/fragments_padding_top"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="16dp"
        android:background="@drawable/background"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/fragment_receipt_end_imgOrganization"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:layout_marginTop="8dp"
            android:src="@drawable/ic_organization_traffic_police" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:background="#22673AB7"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="8dp">

            <com.technotapp.servicestation.customView.CustomTextView
                android:layout_width="192dp"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:clickable="false"
                android:gravity="center"
                android:inputType="none"
                android:text="شناسه قبض"
                android:textColor="#673AB7"
                android:textSize="18sp"
                app:fontName="zar"

                />

            <com.technotapp.servicestation.customView.CustomTextView
                android:id="@+id/fragment_receipt_end_txtBillingId"
                android:layout_width="192dp"
                android:layout_height="wrap_content"
                android:clickable="false"
                android:gravity="center"
                android:inputType="none"
                android:textColor="#000000"
                android:textSize="24dp"
                app:fontName="zar"

                />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_margin="8dp"
                android:background="#673AB7" />

            <com.technotapp.servicestation.customView.CustomTextView
                android:layout_width="192dp"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginTop="8dp"
                android:clickable="false"
                android:gravity="center"
                android:inputType="none"
                android:text="شناسه پرداخت"
                android:textColor="#673AB7"
                android:textSize="18sp"
                app:fontName="zar"

                />

            <com.technotapp.servicestation.customView.CustomTextView
                android:id="@+id/fragment_receipt_end_txtPaymentCode"
                android:layout_width="192dp"
                android:layout_height="wrap_content"
                android:clickable="false"
                android:gravity="center"
                android:inputType="none"
                android:textColor="#000000"
                android:textSize="24dp"
                app:fontName="zar"


                />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_margin="8dp"
                android:background="#673AB7" />

            <com.technotapp.servicestation.customView.CustomTextView
                android:layout_width="192dp"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginTop="8dp"
                android:clickable="false"
                android:gravity="center"
                android:inputType="none"
                android:text="مبلغ"
                android:textColor="#673AB7"
                android:textSize="18sp"
                app:fontName="zar"

                />

            <com.technotapp.servicestation.customView.CustomTextView
                android:id="@+id/fragment_receipt_end_txtAmount"
                android:layout_width="192dp"
                android:layout_height="wrap_content"
                android:clickable="false"
                android:gravity="center"
                android:inputType="none"
                android:textColor="#000000"
                android:textSize="24dp"
                app:fontName="zar"


                />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <com.technotapp.servicestation.customView.CustomButton
            android:layout_width="192dp"
            android:layout_height="48dp"
            android:layout_gravity="center"
            android:layout_marginBottom="16dp"
            android:background="#673AB7"
            android:gravity="center"
            android:text="پرداخت"
            android:textColor="@color/white"
            app:fontName="irsans_bold" />
    </LinearLayout>

</LinearLayout>