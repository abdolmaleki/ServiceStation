<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:id="@android:id/background">
        <shape>
            <solid
                android:color="#c4c1cc"
                />
        </shape>
    </item>

    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <gradient
                    android:startColor="#352a50"
                    android:endColor="#6442a6"
                    android:angle="270"
                    />
            </shape>
        </clip>
    </item>

</layer-list>